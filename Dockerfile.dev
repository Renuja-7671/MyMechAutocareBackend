# Development Dockerfile with hot-reload
FROM node:24-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including dev dependencies)
RUN npm install

# Copy prisma schema
COPY prisma ./prisma/

# Generate Prisma Client
RUN npx prisma generate

# Copy the rest of the application
COPY . .

# Expose port 8000
EXPOSE 8000

# Start with nodemon for hot-reload
CMD ["npm", "run", "dev"]